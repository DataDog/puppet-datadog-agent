/var/log/messages {
postrotate
    /usr/bin/setfacl -m g:dd-agent:rx /var/log/messages
  endscript
}

/var/log/secure {
  postrotate
    /usr/bin/setfacl -m g:dd-agent:rx /var/log/secure
  endscript
}

/var/log/adroll {
  postrotate
    /usr/bin/setfacl -m g:dd-agent:rx /var/log/adroll
  endscript
}

  - host: <%= @host %>
    port: <%= @port %>
    username: <%= @username %>
    password: <%= @password %>
<% if @tags and ! @tags.empty? -%>
    tags:
  <%- Array(@tags).each do |tag| -%>
    <%- if tag != '' -%>
      - <%= tag %>
    <%- end -%>
  <%- end -%>
<% end -%>
